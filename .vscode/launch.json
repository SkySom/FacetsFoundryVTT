    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "name": "Run Script: watch:build",
            "request": "launch",
            "command": "npm run watch:build",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: watch:static",
            "request": "launch",
            "command": "npm run watch:static",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: watch:all",
            "request": "launch",
            "command": "npm run watch:all",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Start FoundryVTT",
            "request": "launch",
            "command": "npx fvtt launch --world facets --adminPassword ${env:FVTT_ADMIN_PASSWORD}"
        }
    ],
    "compounds": [
        {
            "name": "Start Vite and Run Foundry",
            "configurations": ["Run Script: watch:all", "Start FoundryVTT"]
        }
    ]
}
