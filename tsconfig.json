{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "isolatedModules": true,
    "outDir": "dist",
    "allowUnusedLabels": false,
    "allowUmdGlobalAccess": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "noErrorTruncation": true,
    "allowJs": true,
    "types": [
      "@ethaks/fvtt-quench",
      "@types/fvtt-types",
      "svelte"
    ],
    "paths": {
      "@actor": [
        "./src/module/actor/index.ts"
      ],
      "@actor/*": [
        "./src/module/actor/*"
      ],
      "@command": [
        "./src/module/command/index.ts"
      ],
      "@command/*": [
        "./src/module/command/*"
      ],
      "@dice": [
        "./src/module/roll/dice/index.ts"
      ],
      "@dice/*": [
        "./src/module/dice/roll/*"
      ],
      "@interfaces": [
        "./src/interfaces/*"
      ],
      "@item": [
        "./src/module/item/index.ts"
      ],
      "@item/*": [
        "./src/module/item/*"
      ],
      "@roll": [
        "./src/module/roll/index.ts"
      ],
      "@roll/*": [
        "./src/module/roll/*"
      ],
      "@scripts/*": [
        "./src/scripts/*"
      ],
      "@setup": [
        "./src/module/setup/index.ts"
      ],
      "@setup/*": [
        "./src/module/setup/*"
      ],
      "@util": [
        "./src/module/util/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte"
  ]
}
